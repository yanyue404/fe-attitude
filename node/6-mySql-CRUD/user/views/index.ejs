<%- include('./layouts/header.ejs') %>


  <h1>用户列表</h1>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">添加用户</div>
    <div class="panel-body">
      <form id="form1">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">用户名：</span>
          <input type="text" name="name" class="form-control">
        </div>

        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">年龄：</span>
          <input type="number" min="0" max="200" name="age" class="form-control">
        </div>

        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">性别：</span>
          <input type="text" name="gender" class="form-control">
        </div>

        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">地址：</span>
          <input type="text" name="address" class="form-control">
        </div>
        <input type="submit" value="添加用户" class="btn btn-primary">
      </form>
    </div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr><th>Id</th><th>name</th><th>age</th><th>gender</th><th>address</th><th>操作</th></tr>
    </thead>
    <tbody>
      <% users.forEach((item)=>{ %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.age %></td>
        <td><%= item.gender %></td>
        <td><%= item.address %></td>
        <td>
          <a href="/info?id=<%= item.id %>">查看</a>
          <a href="/edit?id=<%= item.id %>">编辑</a>
          <a class="del" href="/del?id=<%= item.id %>">删除</a>
        </td>
      </tr>
      <% }) %>
    </tbody>

    <script src="/node_modules/art-template/lib/template-web.js"></script>
    <script type="text/template" id="tmpl">
    {{ each users}}
    <tr>
        <td>{{$value.id}}</td>
        <td>{{$value.name}}</td>
        <td>{{$value.age}}</td>
        <td>{{$value.gender}}</td>
        <td>{{$value.address}}</td>
        <td>
          <a href="/info?id={{$value.id}}">查看</a>
          <a href="/edit?id={{$value.id}}">编辑</a>
          <a class="del" href="/del?id={{$value.id}}">删除</a>
        </td>
      </tr>
    {{ /each}}
    </script>

    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script>
      $(function(){
        $('#form1').on('submit', function(e){
          e.preventDefault();

          $.ajax({
            url:'/addUser',
            data: $(this).serialize(),
            type:'post',
            dataType:'json',
            success:function(result){
              if(result.err_code ===0){
                var html = template('tmpl', result);
                $('tbody').html(html);
                $('#form1')[0].reset();
              }
            }
          });
        });

        $('body').on('click', '.del', function(e){
          e.preventDefault();

          $.ajax({
            url:$(this).attr('href'),
            type:'get',
            dataType:'json',
            success:function(result){
              if(result.err_code === 0){
                var html = template('tmpl', result);
                $('tbody').html(html);
              }
            }
          });
        });
      });
    </script>
</table>

